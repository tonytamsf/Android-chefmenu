<FrameLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:focusable="false"
    android:id="@+id/menu_description"
    android:clickable="true"
    android:padding="2dp"
    android:background="#00000000"
    android:nestedScrollingEnabled="false"
    android:measureAllChildren="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|left"
        android:background="#00000000">



        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".67"
            android:layout_height="fill_parent"
            android:background="#00000000">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:id="@+id/menu_detail_name"
                style="@style/TextAppearance.AppCompat.Large" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:context="com.wordpress.tonytam.chefsmenu.MenuDetailFragment"
                android:text="menu item "
                android:layout_gravity="left|right"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
                android:id="@+id/menu_detail_description"
                android:layout_gravity="bottom|left"
                android:clickable="true"
                android:layout_marginLeft="3dp"
                android:layout_below="@+id/menu_detail_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/image_button_like" />
            <ImageButton
                android:id="@+id/image_button_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:layout_above="@+id/menu_detail_name"
                android:background="#00000000"
                android:src="@drawable/like_button"
                android:clickable="true"
                android:longClickable="true" />
        </RelativeLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="200dp"
            android:id="@+id/menu_image"
            android:src="@drawable/like_button"
            android:clickable="true"
            android:layout_gravity="left"
            android:scaleType="centerCrop" />
    </LinearLayout>

</FrameLayout>
<FrameLayout
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:focusable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_image"
        android:src="@drawable/nav_dessert_menu" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/menu_detail_name"
        style="?android:attr/textAppearanceLarge" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:padding="16dp" android:textIsSelectable="true"
        tools:context="com.wordpress.tonytam.chefsmenu.MenuDetailFragment"
        android:text="menu item "
        android:alpha="10"
        android:textColor="@color/hint_foreground_material_light"
        android:layout_gravity="bottom" />

</FrameLayout>
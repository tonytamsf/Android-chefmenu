<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.tonytam.chefsmenu.SubMenuFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <GridView android:id="@android:id/list" android:layout_width="200dp"
        android:layout_height="match_parent" android:numColumns="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/menu_item_grid"
            android:name="com.wordpress.tonytam.chefsmenu.MenuListFragment"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_marginLeft="2dp" android:layout_marginRight="2dp"
            tools:context="com.wordpress.tonytam.chefsmenu.MenuListFragment"
            tools:layout="@layout/fragment_main" />

    </LinearLayout>
    </LinearLayout>


</FrameLayout>
